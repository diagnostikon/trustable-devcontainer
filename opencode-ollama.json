{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "http://192.168.1.175:11434/v1"
      },
      "models": {
        "qwen3-coder:30b": {
          "name": "qwen3-coder:30b",
          "limit": {
            "context": 32768,
            "output": 8192
          }
        },
        "devstral:24b": {
          "name": "devstral:24b",
          "limit": {
            "context": 131072, // 128k context window
            "output": 8192 // Conservative output limit
          }
        },
        "llama3.1:70b": {
          "name": "llama3.1:70b",
          "limit": {
            "context": 131072, // Llama 3.1 supports 128k context
            "output": 16384
          }
        },
        "gpt-oss:120b": {
          "name": "gpt-oss:120B",
          "limit": {
            "context": 32768,
            "output": 8192
          }
        },
        "gpt-oss:20b": {
          "name": "gpt-oss:20b",
          "limit": {
            "context": 32768,
            "output": 8192
          }
        }
      }
    }
  },
  "agent": {
    "build": {
      "description": "Default coding mode with only Opencode tools.",
      "tools": {
        "read": true,
        "write": true,
        "edit": true,
        "bash": true,
        "grep": true,
        "glob": true,
        "list": true,
        "patch": true,
        "todoread": true,
        "todowrite": true,
        "webfetch": true, // Changed from false
        "websearch": true // Changed from false
      }
    }
  }
}